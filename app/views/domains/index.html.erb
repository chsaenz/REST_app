<h1>Domains</h1>

<table>
  <thead>
    <tr>
      <th>Hostname</th>
      <th>Origin ip address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @domains.each do |domain| %>
      <tr>
        <td><%= domain.hostname %></td>
        <td><%= domain.origin_ip_address %></td>
        <td><%= link_to 'Show', account_domain_path(@account, domain) %></td>
        <td><%= link_to 'Edit', edit_account_domain_path(@account, domain) %></td>
        <td><%= link_to 'Destroy', [@account, domain], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', account_path(@account) %> |
<%= link_to 'New Domain', new_account_domain_path(@account) %>
